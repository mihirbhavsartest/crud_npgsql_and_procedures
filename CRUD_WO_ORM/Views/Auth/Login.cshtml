@model Employee
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="d-flex w-50 flex-column m-auto p-4 shadow mt-4 rounded-3 bg-dark text-white">
    <form action="Login" class="flex-column justify-content-center d-flex gap-4 py-2" method="post">

        <div class="d-flex flex-wrap">
            <label class="w-25 text-nowrap" asp-for="Username">Username</label>
            <div class="w-75">
                <input class="form-control" asp-for="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>

            </div>
        </div>
        <div class="d-flex flex-wrap">
            <label class="w-25 text-nowrap" asp-for="Password">Password</label>
            <div class="w-75">

                <input type="password" class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
        </div>
        <div class="d-flex w-100 gap-3">

            <input type="submit" value="Login" class="btn btn-success w-25" />
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}